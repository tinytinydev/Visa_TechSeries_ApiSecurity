					"",
					"let hashString = crypto.HmacSHA256(preHashString,sharedSecret);",
					"let hexed = hashString.toString(crypto.enc.Hex);",
					"let xPayToken = \"xv2:\" + timestamp + \":\" + hexed;",
					"",
					"pm.collectionVariables.set(\"X-PAY-TOKEN\",xPayToken);"
